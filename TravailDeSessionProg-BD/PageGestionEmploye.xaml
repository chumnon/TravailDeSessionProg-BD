<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TravailDeSessionProg_BD.PageGestionEmploye"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TravailDeSessionProg_BD"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ComboBox x:Name="inEmploye" Header="Employés disponible"  VerticalAlignment="Top" HorizontalAlignment="Stretch"
        ItemsSource="{x:Bind employe}">
        </ComboBox>
        <Button x:Name="btAjoutTache" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" FontSize="20" 
        Background="LightGray" Click="btAjoutTache_Click">
            <TextBlock>Ajouter l'employé</TextBlock>
        </Button>
    </Grid>
</Page>
